<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RaspiRemote.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RaspiRemote"
    xmlns:pages="clr-namespace:RaspiRemote.Pages"
    xmlns:fepages="clr-namespace:RaspiRemote.Pages.FileExplorer"
    Shell.FlyoutBehavior="Flyout"
    x:DataType="local:ShellViewModel">

    <ShellContent Title="System Info"
                  Icon="info_icon.png"
                  ContentTemplate="{DataTemplate pages:SystemInfoPage}"
                  Route="SystemInfoPage"/>

    <ShellContent Title="Terminal"
                  Icon="terminal_icon.png"
                  ContentTemplate="{DataTemplate pages:TerminalPage}"
                  Route="TerminalPage"/>

    <ShellContent Title="GPIO"
                  Icon="pins_icon.png"
                  ContentTemplate="{DataTemplate pages:GpioPage}"
                  Route="GpioPage"/>

    <ShellContent Title="File Explorer"
                  Icon="file_explorer_icon.png"
                  ContentTemplate="{DataTemplate fepages:FileExplorerPage}"
                  Route="FileExplorerPage"/>

    <ShellContent Title="Sensors"
                  Icon="sensors_icon.png"
                  ContentTemplate="{DataTemplate pages:SensorsPage}"
                  Route="SensorsPage"/>

    <MenuItem Text="Shutdown"
              IconImageSource="shutdown_icon.png"
              Command="{Binding PowerCommand}"
              CommandParameter="Shutdown"/>
    
    <MenuItem Text="Reboot"
              IconImageSource="refresh_icon.png"
              Command="{Binding PowerCommand}"
              CommandParameter="Reboot"/>

    <MenuItem Text="Reconnect (restart an app)"
              IconImageSource="refresh_icon.png"
              Command="{Binding ReconnectCommand}"/>
    
    <MenuItem Text="Disconnect (select another device)"
              IconImageSource="link_off_icon.png"
              Command="{Binding DisconnectCommand}"/>

</Shell>
