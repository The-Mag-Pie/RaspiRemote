<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RaspiRemote.Pages.SystemInfoPage"
             xmlns:vm="clr-namespace:RaspiRemote.ViewModels"
             x:DataType="vm:SystemInfoPageViewModel"
             Title="System information">

    <ContentPage.Resources>
        <Style x:Key="SectionGridStyle" TargetType="Grid">
            <Setter Property="Margin" Value="15,10"/>
            <Setter Property="ColumnSpacing" Value="8"/>
            <Setter Property="RowSpacing" Value="10"/>
        </Style>
        
        <Style x:Key="TitleLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>

        <Style x:Key="BasicInfoItemDescriptionLabel" TargetType="Label">
            <Setter Property="VerticalOptions" Value="Center"/>
        </Style>

        <Style x:Key="BasicInfoItemValueLabel" TargetType="Label">

        </Style>

        <Style x:Key="LiveDataItemValueLabel" TargetType="Label">
            <Setter Property="HorizontalOptions" Value="Center"/>
        </Style>

        <Style x:Key="LiveDataProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="ScaleY" Value="{OnPlatform Android=6, WinUI=7}"/>
            <Setter Property="TranslationY" Value="{OnPlatform Android=0, WinUI=3}"/>
        </Style>
    </ContentPage.Resources>

    <RefreshView IsRefreshing="{Binding IsRefreshing}"
                 Command="{Binding RefreshCommand}">
        <ScrollView>
            <VerticalStackLayout Spacing="10"
                                 Margin="15">
                
                <Border Style="{StaticResource ElemBorderStyle}">
                    <Grid Style="{StaticResource SectionGridStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                               Style="{StaticResource TitleLabelStyle}"
                               Text="Basic info"/>

                        <Label Grid.Row="1" Grid.Column="0"
                               Style="{StaticResource BasicInfoItemDescriptionLabel}"
                               Text="Model:"/>

                        <Label Grid.Row="2" Grid.Column="0"
                               Style="{StaticResource BasicInfoItemDescriptionLabel}"
                               Text="Architecture:"/>

                        <Label Grid.Row="3" Grid.Column="0"
                               Style="{StaticResource BasicInfoItemDescriptionLabel}"
                               Text="OS name:"/>

                        <Label Grid.Row="4" Grid.Column="0"
                               Style="{StaticResource BasicInfoItemDescriptionLabel}"
                               Text="OS version:"/>

                        <Label Grid.Row="5" Grid.Column="0"
                               Style="{StaticResource BasicInfoItemDescriptionLabel}"
                               Text="Kernel:"/>

                        <Label Grid.Row="6" Grid.Column="0"
                               Style="{StaticResource BasicInfoItemDescriptionLabel}"
                               Text="Hostname:"/>

                        <Label Grid.Row="7" Grid.Column="0"
                               Style="{StaticResource BasicInfoItemDescriptionLabel}"
                               Text="IPv4 Address(es):"/>

                        <Label Grid.Row="8" Grid.Column="0"
                               Style="{StaticResource BasicInfoItemDescriptionLabel}"
                               Text="IPv6 Address(es):"/>

                        <Label Grid.Row="1" Grid.Column="1"
                               Style="{StaticResource BasicInfoItemValueLabel}"
                               Text="{Binding Model}"/>

                        <Label Grid.Row="2" Grid.Column="1"
                               Style="{StaticResource BasicInfoItemValueLabel}"
                               Text="{Binding Architecture}"/>

                        <Label Grid.Row="3" Grid.Column="1"
                               Style="{StaticResource BasicInfoItemValueLabel}"
                               Text="{Binding OSName}"/>

                        <Label Grid.Row="4" Grid.Column="1"
                               Style="{StaticResource BasicInfoItemValueLabel}"
                               Text="{Binding OSVersion}"/>

                        <Label Grid.Row="5" Grid.Column="1"
                               Style="{StaticResource BasicInfoItemValueLabel}"
                               Text="{Binding Kernel}"/>

                        <Label Grid.Row="6" Grid.Column="1"
                               Style="{StaticResource BasicInfoItemValueLabel}"
                               Text="{Binding Hostname}"/>

                        <Label Grid.Row="7" Grid.Column="1"
                               Style="{StaticResource BasicInfoItemValueLabel}"
                               Text="{Binding IPv4Addresses}"/>

                        <Label Grid.Row="8" Grid.Column="1"
                               Style="{StaticResource BasicInfoItemValueLabel}"
                               Text="{Binding IPv6Addresses}"/>
                    </Grid>
                </Border>

                <Border Style="{StaticResource ElemBorderStyle}">
                    <Grid Style="{StaticResource SectionGridStyle}">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                               Style="{StaticResource TitleLabelStyle}"
                               Text="Live data"/>

                        <Label Grid.Row="1" Grid.Column="0"
                               Text="CPU Usage:"/>

                        <Label Grid.Row="2" Grid.Column="0"
                               Text="CPU Temperature:"/>

                        <Label Grid.Row="3" Grid.Column="0"
                               Text="RAM Usage:"/>

                        <Label Grid.Row="4" Grid.Column="0"
                               Text="Swap Usage:"/>

                        <Label Grid.Row="5" Grid.Column="0"
                               Text="Root disk usage:"/>

                        <ProgressBar Grid.Row="1" Grid.Column="1"
                                     Style="{StaticResource LiveDataProgressBarStyle}"
                                     Progress="{Binding CPUUsage}">
                        </ProgressBar>

                        <Label Grid.Row="1" Grid.Column="1"
                               Style="{StaticResource LiveDataItemValueLabel}"
                               Text="{Binding CPUUsagePercent, StringFormat='{0}%'}"/>

                        <ProgressBar Grid.Row="2" Grid.Column="1"
                                     Style="{StaticResource LiveDataProgressBarStyle}"
                                     Progress="{Binding CPUTemperature}">
                        </ProgressBar>

                        <Label Grid.Row="2" Grid.Column="1"
                               Style="{StaticResource LiveDataItemValueLabel}"
                               Text="{Binding CPUTemperatureDeg, StringFormat='{0}&#186;C'}"/>

                    </Grid>
                </Border>

            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>
    
</ContentPage>