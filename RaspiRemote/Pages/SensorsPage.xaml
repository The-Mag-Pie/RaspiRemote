<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:RaspiRemote.ViewModels"
             x:DataType="vm:SensorsPageViewModel"
             x:Class="RaspiRemote.Pages.SensorsPage"
             Title="Sensors">

    <ContentPage.Resources>
        <Style x:Key="SectionFrameStyle" TargetType="Frame">
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="BackgroundColor" Value="#C6C6C6"/>
            <Setter Property="Padding" Value="20"/>
        </Style>
        <Style x:Key="SensorHeaderLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="VerticalOptions" Value="Center"/>
        </Style>
        <Style x:Key="SensorStatePickerStyle" TargetType="Picker">
            <!--<Setter Property="BackgroundColor" Value="White"/>
            <Setter Property="TitleColor" Value="Black"/>-->
            <Setter Property="TextTransform" Value=""
        </Style>
    </ContentPage.Resources>

    <VerticalStackLayout Padding="20">
        <Frame Style="{StaticResource SectionFrameStyle}">
            <VerticalStackLayout>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Style="{StaticResource SensorHeaderLabelStyle}"
                           Grid.Column="0"
                           Text="DHT11"/>
                    <Picker Style="{StaticResource SensorStatePickerStyle}"
                            ItemsSource="{Binding SensorStates}"
                            Grid.Column="1"/>
                    <HorizontalStackLayout Grid.Column="2"
                                           Spacing="5">
                        <Label Style="{StaticResource SensorHeaderLabelStyle}"
                               Text="Pin:"/>
                        <Picker ItemsSource="{Binding GpioPins}"/>
                    </HorizontalStackLayout>
                </Grid>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>