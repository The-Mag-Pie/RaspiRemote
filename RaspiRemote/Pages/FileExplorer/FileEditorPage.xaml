<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RaspiRemote.Pages.FileExplorer.FileEditorPage"
             xmlns:vm="clr-namespace:RaspiRemote.ViewModels.FileExplorer"
             x:DataType="vm:FileEditorPageViewModel"
             Title="{Binding File.Name, StringFormat='Editing file: {0}'}">
    <Grid ColumnSpacing="5">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ScrollView Grid.ColumnSpan="2">
            <Editor Text="{Binding Content}"
                    AutoSize="TextChanges"/>
        </ScrollView>

        <Button Grid.Row="1"
                Margin="5,5,0,5"
                Text="Save"
                Command="{Binding SaveCommand}"/>

        <Button Grid.Row="1" Grid.Column="1"
                Margin="0,5,5,5"
                Text="Cancel"
                Command="{Binding CancelCommand}"/>
    </Grid>
</ContentPage>